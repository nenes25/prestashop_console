{
  "name": "hhennes/prestashop-console",
  "description": "Tools to manage your prestashop with CLI",
  "homepage": "https://github.com/nenes25/prestashop_console",
  "authors": [
    {
      "name": "hhennes",
      "email": "contact@h-hennes.fr",
      "homepage": "https://www.h-hennes.fr/blog/"
    }
  ],
  "license": "OSL-3.0",
  "require": {
    "php" : ">=7.4",
    "symfony/console": "^4.4",
    "psr/log": "^1.0",
    "symfony/yaml": "^4.4",
    "symfony/finder": "^4.4",
    "padraic/phar-updater": "^1.0",
    "symfony/lock": "^4.4",
    "symfony/filesystem": "^4.4"
  },
  "autoload": {
    "psr-0": {
      "PrestashopConsole": "src"
    }
  },
  "config": {
    "vendor-dir": "src/vendor"
  },
  "require-dev": {
    "prestashop/php-dev-tools": "^3.4",
    "phpstan/phpstan": "^0.12.14",
    "phpunit/phpunit": "^8.5"
  },
  "scripts": {
    "header-stamp": [
      "@php ./src/vendor/bin/header-stamp --exclude=\"src/vendor,.github,bin,examples\" --extensions=php --license='./.devtools/licence.txt'"
    ],
    "cs-fixer": [
      "@php ./src/vendor/bin/php-cs-fixer fix"
    ],
    "test": [
      "@php -d date.timezone=UTC ./src/vendor/bin/phpunit -c tests/phpunit.xml tests/PrestashopConsole/"
    ]
  }
}
